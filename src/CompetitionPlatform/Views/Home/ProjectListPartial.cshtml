@model CompetitionPlatform.Models.ProjectViewModels.ProjectListIndexViewModel

@foreach (var project in Model.Projects)
{
    <div class="col-md-6 project-tile">
        <div class="row">
            <div class="col-md-12">
                <a class="inline h3" asp-controller="Project" asp-action="ProjectDetails" asp-route-id="@project.Id">@project.Name</a>
                <div class="pull-right">
                    <div class="project-index-budget">$@project.BudgetFirstPlace</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="btn btn-xs btn-info project-status inline">
                    @project.Status
                </div>
                @if (@project.Status == Status.Initiative)
                {
                    <p class="text-muted inline project-voting-text project-status-votes">
                        @(project.VotesFor + project.VotesAgainst) Votes
                    </p>
                }
            </div>
        </div>
        <div class="project-description">@project.Description</div>
        <div class="row project-tile-bottom">
            <a asp-area="" asp-controller="Project" asp-action="ProjectDetails" asp-route-id="@project.Id" class="btn btn-xs btn-info pull-right inline">...</a>
            <div class="inline pull-right comments-count">
                <span class="glyphicon glyphicon-comment index-comments-icon"></span>
                <div class="inline">
                    @project.CommentsCount
                </div>
            </div>
        </div>
        <hr />
    </div>
}


