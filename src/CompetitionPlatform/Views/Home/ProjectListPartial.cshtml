@model CompetitionPlatform.Models.ProjectViewModels.ProjectListIndexViewModel

<div class="container container--extend">
    <div class="row">
        @foreach (var project in Model.Projects)
        {
            <div class="col-md-6">
                @{
                    var statusColor = "";
                    var projectStatus = project.Status.ToString().ToUpper();
                    var projectCount = "";
                    var votesCount = project.VotesFor + project.VotesAgainst;
                }

                @switch (project.Status)
                {
                    case Status.Initiative:
                        statusColor = "label--blue";
                        projectCount = (votesCount == 1) ? votesCount + " VOTE" : votesCount + " VOTES";
                        break;
                    case Status.Registration:
                        statusColor = "label--green";
                        //projectStatus = "COMPETITION REGISTRATION";
                        projectCount = (project.ParticipantsCount == 1) ? project.ParticipantsCount + " PARTICIPANT" : project.ParticipantsCount + " PARTICIPANTS";
                        break;
                    case Status.Submission:
                        statusColor = "label--red";
                        projectCount = (project.ParticipantsCount == 1) ? project.ParticipantsCount + " PARTICIPANT" : project.ParticipantsCount + " PARTICIPANTS";
                        break;
                    case Status.Voting:
                        statusColor = "label--yellow";
                        projectCount = (project.ResultsCount == 1) ? project.ResultsCount + " RESULT" : project.ResultsCount + " RESULTS";
                        break;
                    case Status.Archive:
                        statusColor = "label--grey";
                        projectCount = (project.WinnersCount == 1) ? project.WinnersCount + " WINNER" : project.WinnersCount + " WINNERS";
                        break;
                }
                <div class="card card--preview">
                    <div class="card__inner">
                        <div class="card__body">
                            <div class="card__header">
                                <div class="card__sum h3 pull-right">$@project.BudgetFirstPlace</div>
                                <div class="card__title h3">
                                    <a asp-controller="Project" asp-action="ProjectDetails" asp-route-id="@project.Id">@project.Name</a>
                                </div>
                            </div>
                            <div class="card__desc">
                                <a href="" class="label @statusColor label--flat">@projectStatus</a>
                                <span class="votes">@projectCount</span>
                            </div>
                            <p class="card__text">
                                @project.Overview
                            </p>
                        </div>

                        <div class="card__footer">
                            <div class="card__actions text-right">
                                @if (project.Status == Status.Registration)
                                {
                                    <a href="" class="action_link action_link--deadline"><i class="icon icon--deadline"></i> @project.CompetitionRegistrationDeadline.ToString("dd.MM.yyyy")</a>
                                }
                                @if (project.Status == Status.Submission)
                                {
                                    <a href="" class="action_link action_link--deadline"><i class="icon icon--deadline"></i> @project.ImplementationDeadline.ToString("dd.MM.yyyy")</a>
                                }
                                @if (project.Status == Status.Voting)
                                {
                                    <a href="" class="action_link action_link--deadline"><i class="icon icon--deadline"></i> @project.VotingDeadline.ToString("dd.MM.yyyy")</a>
                                }
                                <a href="" class="action_link action_link--comments"><i class="icon icon--comment"></i> @project.CommentsCount</a>
                                <a asp-area="" asp-controller="Project" asp-action="ProjectDetails" asp-route-id="@project.Id" class="action_link action_link--more">
                                    <i class="icon icon--more"></i>
                                </a>
                            </div>

                            <div class="user_badge">
                                <div class="user_badge__img"><a href=""><img src="~/images/avatar.svg" alt=""></a></div>
                                <div class="user_badge__info">
                                    <div class="user_badge__title"><a href="">@project.AuthorFullName</a></div>
                                    <div class="user_badge__desc">In <a href="">@project.Category</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                    }
    </div>
</div>
