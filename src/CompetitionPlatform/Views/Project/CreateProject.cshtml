@model CompetitionPlatform.Models.Project

@{
    ViewData["Title"] = "Create Project";
}

<h2>CreateProject</h2>

<form asp-action="CreateProject">
    <div class="form-horizontal">
        <h4>Basic Info</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <textarea asp-for="Description" class="form-control"/></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <h4>Deadlines</h4>
        <hr />
        <div class="form-group">
            <label asp-for="CompetitionRegistrationDeadline" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="CompetitionRegistrationDeadline" class="form-control" />
                <span asp-validation-for="CompetitionRegistrationDeadline" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ImplementationDeadline" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="ImplementationDeadline" class="form-control" />
                <span asp-validation-for="ImplementationDeadline" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VotingDeadline" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="VotingDeadline" class="form-control" />
                <span asp-validation-for="VotingDeadline" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
